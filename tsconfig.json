{
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "types": ["mocha", "chai"],
    "typeRoots": ["./node_modules/@types"],
    "lib": ["es2020", "dom"],
    "module": "commonjs",
    "target": "es2020",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "references": [{ "path": "./cli" }],
  "exclude": ["node_modules"]
}

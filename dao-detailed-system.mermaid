flowchart TB
    %% Core Components
    CLI[/"Multi-chain CLI Interface"/]
    
    %% Chain-specific Components
    subgraph SOLANA["Solana Ecosystem"]
        direction TB
        sol_dao["Solana DAO Program<br>ProgramID: xyz.."]
        sol_treasury["Solana Treasury<br>- Holds SOL<br>- SPL Tokens"]
        sol_token["Solana DAO Token<br>SPL-Token"]
        sol_lp["Solana LP Token<br>Orca/Raydium"]
        
        subgraph SOL_DEX["Solana DEX"]
            direction TB
            orca["Orca DEX<br>- Main LP Pool"]
            raydium["Raydium DEX<br>- Arbitrage"]
            jupiter["Jupiter Aggregator"]
        end
    end
    
    subgraph STARKNET["StarkNet Ecosystem"]
        direction TB
        stark_dao["StarkNet DAO Contract<br>Cairo Implementation"]
        stark_treasury["StarkNet Treasury<br>- Holds ETH"]
        stark_token["StarkNet DAO Token<br>ERC20"]
        stark_lp["StarkNet LP Token<br>JediSwap"]
        
        subgraph STARK_DEX["StarkNet DEX"]
            direction TB
            jediswap["JediSwap<br>- Main LP Pool"]
            alpharoad["Alpha Road<br>- Arbitrage"]
            avnu["Avnu Aggregator"]
        end
    end
    
    %% Bridge & Cross-chain
    subgraph BRIDGE["Cross-chain Bridge"]
        direction TB
        wormhole["Wormhole Bridge"]
        chainlink["Chainlink Oracles"]
        state_sync["State Sync Layer"]
    end
    
    %% AI Operations
    subgraph AI_OPS["AI Agent Operations"]
        direction TB
        agent["Multi-chain AI Agent"]
        strategy["Cross-chain Strategy"]
        executor["Chain-specific Executor"]
        monitor["Multi-chain Monitor"]
    end
    
    %% UI Layer
    subgraph UI["Unified Interface"]
        direction TB
        trade_ui["Trading Panel"]
        stake_ui["Staking Panel"]
        stats_ui["Cross-chain Analytics"]
    end

    %% Connections
    CLI -->|"solana commands"| SOLANA
    CLI -->|"starknet commands"| STARKNET
    CLI -->|"bridge commands"| BRIDGE
    
    %% Solana Flow
    sol_dao --> sol_treasury
    sol_treasury --> SOL_DEX
    orca --> sol_lp
    raydium --> sol_lp
    
    %% StarkNet Flow
    stark_dao --> stark_treasury
    stark_treasury --> STARK_DEX
    jediswap --> stark_lp
    alpharoad --> stark_lp
    
    %% Bridge Flow
    SOLANA <-->|"assets & state"| wormhole
    STARKNET <-->|"assets & state"| wormhole
    chainlink -->|"price feeds"| AI_OPS
    
    %% AI Flow
    agent -->|"analyze"| strategy
    strategy -->|"execute"| executor
    executor -->|"solana trades"| SOLANA
    executor -->|"starknet trades"| STARKNET
    monitor -->|"track"| state_sync

    %% UI Flow
    UI -->|"unified interface"| CLI
    
    %% Styling
    classDef primary fill:#0066cc,stroke:#000,stroke-width:2px,color:#fff
    classDef solana fill:#00cc66,stroke:#000,stroke-width:2px,color:#fff
    classDef starknet fill:#cc6600,stroke:#000,stroke-width:2px,color:#fff
    classDef bridge fill:#cc0000,stroke:#000,stroke-width:2px,color:#fff
    classDef ai fill:#6600cc,stroke:#000,stroke-width:2px,color:#fff

    class CLI,UI primary
    class SOLANA,sol_dao,sol_treasury,sol_token,sol_lp solana
    class STARKNET,stark_dao,stark_treasury,stark_token,stark_lp starknet
    class BRIDGE,wormhole,chainlink,state_sync bridge
    class AI_OPS,agent,strategy,executor,monitor ai

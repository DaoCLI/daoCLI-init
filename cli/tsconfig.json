{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "allowJs": true,
    "types": ["node", "mocha", "chai"],
    "typeRoots": ["../node_modules/@types"],
    "module": "commonjs",
    "target": "es2020"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
